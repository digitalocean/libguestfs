.SH "КОРОТКИЙ ОПИС"
.IX Header "КОРОТКИЙ ОПИС"
.Vb 5
\& require \*(Aqguestfs\*(Aq
\& g = Guestfs::Guestfs.new()
\& g.add_drive_opts("disk.img",
\&                  :readonly => 1, :format => "raw")
\& g.launch()
