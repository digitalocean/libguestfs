#!/usr/bin/make -f

override_dh_auto_clean:
	test -f Makefile && $(MAKE) distclean || true

override_dh_auto_configure:
	dh_auto_configure -- \
		--with-readline	     \
		--with-java-home=no  \
		--disable-ruby       \
		--disable-haskell    \
		--disable-php

override_dh_strip:
	dh_strip --dbg-package=libguestfs0-dbg

%:
	dh --with=autotools-dev,ocaml,python2 $@
